<UserControl x:Class="Source.RainbowWave.RainbowWaveConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Source.RainbowWave"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label Foreground="White" Grid.Row="0">Speed</Label>
        <Slider Margin="5,0,5,0" TickPlacement="BottomRight" TickFrequency="1" Minimum="0" Maximum="10" IsSnapToTickEnabled="True" Value="{Binding Speed}"></Slider>
    </StackPanel>
</UserControl>
